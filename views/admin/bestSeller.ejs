

<div class="container">
    <div class="sales-report mt-4 mb-5 p-4 bg-white rounded shadow-sm">
        <h1 class="mb-4">Best Sellers</h1>

        <!-- Best Seller Products Section -->
        <section class="best-sellers-section mb-5">
            <h4 class="section-title text-decoration-underline mb-3">Best Seller Products</h4>
            <div class="row">

               <% if(bestSellerProducts){ %>
                    <% bestSellerProducts.forEach((product,index)=>{ %>

                        <!-- Product 1 -->
                        <div class="col-lg-3 mb-4">
                            <div>
                            </div>
                            <div class="card h-100 justify-content-center align-items-center">
                                <h5><%= index+1 %></h5>
                                <div class="mt-3">
                                <img src="../../../../<%= product.productImage[0] %>" height="100px" width="100px" class=" alt="Product Image">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title"><%= product.productName %></h5>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else{ %>
                     <h1>
                        No Product Found
                    </h1>
               <% } %>


            </div>
        </section>

        <!-- Best Seller Collections Section -->
        <section class="best-sellers-section">
            <h4 class="section-title text-decoration-underline mb-3">Best Seller Collections</h4>
            <ul class="list-group">

               <% if(bestSellerCollections){ %>
                    <% for(let collection of bestSellerCollections.keys()) {%>
                        
                        <li class="list-group-item"><%= collection %></li>
                    <% } %>
               <% } %>

            </ul>
        </section>
    </div>
</div>
