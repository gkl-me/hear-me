<div class="text-center mt-4"><h1>Similar Products</h1></div>

<div class="card-container d-flex justify-content-around my-4">
    <% for(let i=0; i<similarProduct.length && i< 3; i++  ) { %>
    <div class="product-card d-flex flex-column justify-content-start ">
        <a href="/user/product/<%= similarProduct[i].id %>" class="image-card">
            <img src="../../<%= similarProduct[i].productImage[0] %>" alt="">
        </a>
        <h3 class="mt-3"><%= similarProduct[i].productName %></h3>
        <h5><i class="bi bi-currency-rupee"></i><%= similarProduct[i].productPrice %></h5>
    </div>
    <% } %>
    
</div>