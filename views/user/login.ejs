<%- include('nav.ejs') %>

<div class="login d-flex justify-content-center my-5 ">
    <div class="login-form-container d-flex flex-column  text-center ">
        <h2 class="text-center">Login to Account</h2>
        <p class="text-center">Enter your email to login</p>
        <form action="/user/login" method="post">
            <div class="form-group">
                <input type="email" class="form-control form-input" name="email" placeholder="Email Address" required>
            </div>
            <div class="form-group position-relative d-flex align-items-center">
                <input type="password" class="form-control form-input" name="password" id="password" placeholder="Password" required>
                <span id="toggle-password" onclick="togglePassword('password',this)" class="me-1 password-toggle align-content-center position-absolute end-0"><i class="bi bi-eye"></i></span>
            </div>
            <button type="submit" class="btn submit-btn">Login with email</button>
            <p class="text-center text-black-50  mt-3">Forgot Password? <a href="/user/forgotpassword">Reset</a></p>
            <hr>
            <a href="/user/auth/google">
            <button type="button" class="btn submit-btn-light">
                <img width="25px" height="25px" src="/public/assets/google-icon" alt="">
                Continue with Google
            </button>
        </a>
            <p class="text-center text-black-50">New Here <a href="/user/signup">Signup</a></p>
        </form>
    </div>
</div>


<script>

    function togglePassword(id,toggle){
        const pass = document.getElementById(id)
        const type = pass.getAttribute('type') === 'password' ? 'text' : 'password';
        pass.setAttribute('type',type)
        toggle.innerHTML = type === 'password' ? '<i class="bi bi-eye"></i>' : '<i class="bi bi-eye-slash"></i>';

    }

</script>



