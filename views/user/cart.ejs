<%- include('nav') %>


<style>

.card-title {
    font-size: 1.25rem;
}

.quantity-counter {
    max-width: 100px;
}

.quantity-counter input {
    width: 45px;
}

.btn-link {
    text-decoration: none;
    color: #6c757d;
    font-size: 1rem;
    padding: 0;
}

.btn-link:hover {
    text-decoration: underline;
}

</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">

            <% let totalPrice = 0
            if(cart && cart.products.length > 0){  %>
                <% cart.products.forEach(product => { 
                    
                    totalPrice += product.price * product.quantity

                    %>


            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="../../<%= product.productId.productImage[0]%>" class="img-fluid rounded-start" alt="Product Image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.productId.productName %></h5>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <p class="mb-0"><strong><%= product.price %></strong></p>
                                </div>
                                <div class="input-group quantity-counter">
                                    <button class="btn btn-outline-secondary btn-sm"  onclick="decrement(`<%= product.productId._id %>`)" >-</button>
                                    <input type="text" class="form-control text-center" id="quantity" value="<%= product.quantity%>" readonly>
                                    <button class="btn btn-outline-secondary btn-sm" onclick="increment(`<%= product.productId._id %>`)">+</button>
                                </div>
                                <div>
                                    <p class="mb-0"><strong><i class="bi bi-currency-rupee"></i><%= product.price * product.quantity %></strong></p>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end mt-2">
                                <button class="btn btn-outline-danger btn-sm me-2" onclick="removeFromCart(`<%= product.productId._id %>`)" ><i class="bi bi-trash3"></i></button>
                                <button class="btn btn-outline-secondary btn-sm"><i class="bi bi-heart"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
            <% } else { %>
                <p>Your cart is empty</p>

                <% } %>

        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Order Summary #MN0124</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Sub Total
                            <span><i class="bi bi-currency-rupee"></i><%= totalPrice %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Discount
                            <span><i class="bi bi-currency-rupee"></i>0.00</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Shipping Charge
                            <span><i class="bi bi-currency-rupee"></i>0.00</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Total</strong>
                            <strong><i class="bi bi-currency-rupee"></i><%= totalPrice %></strong>
                        </li>
                    </ul>
                </div>

                </div>
            <div class="d-flex justify-content-between my-3">
                <a href="/user/home" class="btn ">‚Üê Continue Shopping</a>
                <a href="/user/checkout" class="btn btn-success">Checkout</a>
            </div>
                </div>
    </div>
</div>


<script>


    async function increment(productId){

        

        console.log(productId)

        try {

            const res = await fetch('/user/cart/increment',{
                method: 'POST',
                headers : {
                    'Content-Type': 'application/json'
                },
                body : JSON.stringify({productId})
            })

            if(res.ok){


                window.location.href = '/user/cart'
            }else{
                const error = await res.text();

                showError(error)
            }
            
            
        } catch (error) {
            console.log(`error from increment in cart ${error}`)
        }

    }

    async function decrement(productId){

        try {

            const res = await fetch('/user/cart/decrement',{
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({productId})
            })

            if(res.ok){
                window.location.href = '/user/cart'
            }else{

                const error = await res.text()
                showError(error)

            }
            
        } catch (error) {
            console.log(`error when decrement in cart${error} `)
        }

    }


    async function removeFromCart(productId){

        try {

            const res = await fetch('/user/cart/remove',{
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body : JSON.stringify({productId})
            })

            if(res.ok){
                window.location.href = '/user/cart'
            }else{

                const error = await res.text()

                showError(error)
            }
            
        } catch (error) {
            console.log(`error from remove from cart fetch ${error}`)
        }
    }

</script>


