<% if(wishlist && wishlist.products.length !== 0) { %>
<% wishlist.products.forEach((item) =>{ %>
    <div class="col-md-4 mb-5">
        <% if(item.productId && item.productId.productQuantity === 0){ %>
            <div class="product-card d-flex flex-column justify-content-start">
                <a href="/user/product/<%= item.productId._id %>" class="image-card position-relative atag">
                    <img src="../../<%= item.productId.productImage[0] %>" alt="">
                    <!-- <span class="new-tag">NEW</span> -->
                    <div class="image-card position-absolute opacity-50 bg-black">
                        <h4 class="text-white">Out of stock</h4>
                    </div>
                </a>
                <div class="d-flex justify-content-start gap-5 align-items-center">
                    <div>
                        <h5 class="title-container mt-3"><%= item.productId.productName %></h5>
                        <h5><i class="bi bi-currency-rupee"></i><%= item.productId.productPrice %></h5>
                    </div>
                    <div class="mt-3 ">
                        <div class="rating-star">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star"></i>(30)
                        </div>
                        <div class="d-flex gap-2 align-items-center">
                            <a onclick="addToCart('<%= item.productId._id %>','<%= user %>')" class="btn submit-btn">Add to Cart</a>
                                <span class="wishlist-heart" id="wishlist-heart">
                                     <i class="bi bi-heart-fill"  onclick="addToWishlist('<%= item.productId._id %>','<%= user %>',this)"></i>
                                </span>
                                
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="product-card d-flex flex-column justify-content-start">
                <a href="/user/product/<%= item.productId._id %>" class="image-card atag">
                    <img src="../../<%= item.productId.productImage[0] %>" alt="">
                    <!-- <span class="new-tag">NEW</span> -->
                </a>
                <div class="d-flex justify-content-start gap-5 align-items-center">
                    <div>
                        <h5 class="title-container mt-3"><%= item.productId.productName %></h5>
                        <h5>
                            <i class="bi bi-currency-rupee"></i><%= item.productId.productPrice %>
                        </h5>
                    </div>
                    <div class="mt-3">
                        <div class="rating-star">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star"></i>(30)
                        </div>
                        <div class="d-flex gap-2 align-items-center">
                            <a onclick="addToCart('<%= item.productId._id %>','<%= user %>')" class="btn submit-btn">Add to Cart</a>
                                <span class="wishlist-heart" id="wishlist-heart">
                                     <i class="bi bi-heart-fill"  onclick="addToWishlist('<%= item.productId._id %>','<%= user %>',this)"></i>
                                </span>

                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
<% }); %>
<% } else{ %>
    <div class="text-center">
        <h1>Wishlist is empty</h1>
    </div>
    <%}%>